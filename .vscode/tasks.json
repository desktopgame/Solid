{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake",
            "type": "shell",
            "command": "cmake -S src -B build -G 'Unix Makefiles'",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Make",
            "type": "shell",
            "command": "make -C build",
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "All",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake",
                "Make"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "start Solid.exe",
            "options": {
                "cwd": ".\\build\\Solid"
            }
        },
        // アセットのインポートタスク
        // rawdataには編集可能な状態でデータを置き、assetsには最適化された状態で出力する
        {
            "label": "Import",
            "type": "shell",
            "dependsOn": [
                "Import vox",
                "Import model",
                "Import texture",
                "Import font",
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "Import vox",
            "type": "shell",
            "command": "python .\\scripts\\vox_importer.py",
            "hide": true
        },
        {
            "label": "Import model",
            "type": "shell",
            "command": "python .\\scripts\\model_importer.py",
            "hide": true
        },
        {
            "label": "Import texture",
            "type": "shell",
            "command": "python .\\scripts\\texture_importer.py",
            "hide": true
        },
        {
            "label": "Import font",
            "type": "shell",
            "command": "python .\\scripts\\font_importer.py",
            "hide": true
        },
    ]
}